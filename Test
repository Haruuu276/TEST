-- Visual Pet Spawner with Selection GUI
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local petsFolder = game.ReplicatedStorage:WaitForChild("Pets")
local runService = game:GetService("RunService")

local frame = script.Parent -- GUI Frame
local radius = 5 -- Distance from player for pet placement

-- Function to create a button for each pet in ReplicatedStorage
local function createPetButtons()
    for _, petModel in ipairs(petsFolder:GetChildren()) do
        if petModel:IsA("Model") then
            local button = Instance.new("TextButton")
            button.Size = UDim2.new(1, 0, 0, 40)
            button.Text = "Spawn " .. petModel.Name
            button.Parent = frame

            button.MouseButton1Click:Connect(function()
                spawnPet(petModel.Name)
            end)
        end
    end
end

-- Function to spawn a visual pet
function spawnPet(petName)
    local petModel = petsFolder:FindFirstChild(petName)
    if not petModel then
        warn("Pet not found: " .. petName)
        return
    end

    local pet = petModel:Clone()
    pet.Parent = workspace

    local offset = Vector3.new(0, 0, radius)
    runService.RenderStepped:Connect(function()
        if pet and pet.PrimaryPart and character and character:FindFirstChild("HumanoidRootPart") then
            pet:SetPrimaryPartCFrame(character.HumanoidRootPart.CFrame * CFrame.new(offset))
        end
    end)
end

-- Create buttons for all pets
createPetButtons()
